{
    "version": 2,
    "builds": [
        {
        "src": "blogApp/wsgi.py",
        "use": "@vercel/python",
        "config": {
            "maxLambdaSize": "15mb",
            "runtime": "python3.11.11",
            "installCommand": "./build_files.sh"
        }
    },
    {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
        {
            "src": "/static/css/(.*)",
            "dest": "/css/$1"
        },
        {
            "src": "/static/icons/(.*)",
            "dest": "/icons/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "blogApp/wsgi.py"
        }
    ]
}
